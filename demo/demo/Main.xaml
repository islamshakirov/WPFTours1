<Window x:Class="demo.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="Main" Height="535.5" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Путешествуй по России!" FontFamily="Comic Sans MS" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"></TextBlock>
        <Grid Background="#bae3e8" Panel.ZIndex="-2"> </Grid>
        <Frame Grid.Row="1" Name="MainWindow" ContentRendered="MainWindow_ContentRendered" NavigationUIVisibility="Hidden">
        </Frame>
        <Button Width="120" Content="Back" Name="backbtn" HorizontalAlignment="Right" Click="backbtn_Click"/>
        <Grid Grid.Row="2" Background="#445c93">
        </Grid>
        <Button Content="Отели" Grid.Row="2" HorizontalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
